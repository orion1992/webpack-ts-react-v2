{
  "compilerOptions": {
    "sourceMap": true,
    "noImplicitAny": false,
    "module": "commonjs",
    "target": "es6",
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "lib": [
      "es2015",
      "es2017",
      "dom"
    ],
    "removeComments": true,
    "jsx": "react",
    "allowJs": true,
    "checkJs": true,
    "outDir": "./dist",
    "noUnusedLocals": true,
    "noUnusedParameters": true
  },
  "include": [
    "app"
  ],
  "exclude": [
    ".idea",
    "node_modules"
  ]
}
